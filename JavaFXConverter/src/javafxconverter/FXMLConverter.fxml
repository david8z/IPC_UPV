<VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxconverter.FXMLConverterController">
   <children>
      <Slider fx:id="slider" max="2.0" showTickLabels="true" showTickMarks="true" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Slider>
      <Text fx:id="conversionRateIdentifier" strokeType="OUTSIDE" strokeWidth="0.0" text="Conversion Rate: 0,0">
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </Text>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Input:" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="20.0" right="26.0" />
               </HBox.margin>
            </Text>
            <TextField fx:id="InputText">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Output:">
               <HBox.margin>
                  <Insets left="20.0" right="15.0" />
               </HBox.margin>
            </Text>
            <TextField fx:id="OutputText">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#ConverterMethod" text="Convert" />
